.scroll__down-btn {
  display: inline-block;
  font-size: 18px;
  color: $gray-color;
  font-family: "Open Sans";
  font-weight: 600;
  position: relative;

  &:after {
    position: absolute;
    top: 8%;
    content: "";
    width: 20px;
    height: 30px;
    background: svg-load(
      "scroll.svg",
      fill=$gray-color,
      width=100%,
      height=100%
    );
    background-repeat: no-repeat;
    margin-left: 20px;
  }
}
