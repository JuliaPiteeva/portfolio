.slider-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  @include tablets {
    flex-flow: column;
    justify-content: center;
  }
}

.slider__list {
  display: flex;
}
.slider__item {
  width: 100%;
  flex-shrink: 0;
  position: relative;
}

.slider__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  @include tablets {
    object-fit: contain;
  }
}
