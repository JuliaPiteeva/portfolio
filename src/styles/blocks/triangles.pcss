.triangles {
  display: flex;
}
.values__triangles {
  position: absolute;
  /* top: 0; */
  bottom: 0;
  width: 100%;
  /* background: linear-gradient(to top, #f9f9fb, #f0eff4); */
}
.triangles__item {
  width: 50%;
  height: 90px;
  fill: #fff;
  &--lower {
    height: 40px;
  }
}
.triangles__item-rotate {
  transform: rotate(-180deg);
}
.reviews__triangles {
  background-color: #e0e8f2;
}
