.triangles {
  display: flex;
}
.welcome-section__triangles {
  position: absolute;
  bottom: 0;
  width: 100%;
}
.triangles__item {
  width: 50%;
  height: 90px;
  fill: #fff;
  &--lower {
    height: 40px;
  }
}
.triangles__item-rotate {
  transform: rotate(-180deg);
}
.reviews__triangles {
  background-color: #e0e8f2;
}
