.feedback__btn {
  padding: 30px 100px;
  text-transform: uppercase;
  border-top-left-radius: 40px;
  border-bottom-right-radius: 40px;
  background: $linear-gradient;
  font-size: 18px;
  color: #ffffff;
  font-family: "Open Sans";
  font-weight: 700;
  transition: color 0.9s;

  &--mrg--bottom {
    margin-bottom: 100px;
  }
  &:hover {
    color: $main-color;
    background: $white-color;
  }
}
