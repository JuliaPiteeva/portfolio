.parallax {
  overflow: hidden;
  min-height: 1520px;
  background: linear-gradient(to bottom, #e1e9f3, #feffff);
  background: #f6f5fa;
  z-index: -20;
  @include tablets {
    height: 100%;
    min-height: 1200px;
  }
}
