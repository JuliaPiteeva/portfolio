.hero {
  height: 100vh;
  position: relative;
  min-height: 650px;
  margin-bottom: 100px;
  display: flex;
  align-items: flex-start;

  @include phones {
    margin-bottom: 0;
  }
}
.hero-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  @include tablets {
    justify-content: flex-start;
  }
}
.hero__content {
  @include tablets {
    position: absolute;
    top: 50%;
  }
}
.hero__bottom-btn {
  @include tablets {
    display: none;
  }
}
