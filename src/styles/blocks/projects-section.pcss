.projects-container {
  margin-bottom: 100px;
}
.projects-section__content {
  display: flex;
  @include tablets {
    flex-direction: column;
    align-items: center;
  }
}

.projects-section__left {
  margin-right: 100px;
  flex: 2;
  @include tablets {
    margin-right: 0;
    flex: 1;
  }
}

.projects-section__right {
  display: flex;
  flex: 1;
}
