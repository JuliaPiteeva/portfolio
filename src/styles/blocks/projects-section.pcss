.projects-container {
  margin-bottom: 100px;
}
.projects-section__content {
  display: flex;
  @include tablets {
    flex-direction: column;
    align-items: center;
  }
}

.projects-section__left {
  width: 66%;
  position: relative;
  z-index: 10;
  margin-right: 100px;
  @include tablets {
    margin-right: 0;
    flex: 1;
  }
  @include phones {
    margin-bottom: 15%;
  }
}

.projects-section__right {
  display: flex;
  flex: 1;
}
