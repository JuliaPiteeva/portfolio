mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, alt, className)
  img(src=require(`images/${path}`) alt="" class=className)
  
mixin imageParallax(path, alt, className)
  img(src=require(`images/${path}`) alt="" class=className data-speed="")

mixin source(path, className, mediaNumber)
  source(scrset=require(`images/${path}`) class=`${className}` media=`"(max-width:${mediaNumber}px)"`)